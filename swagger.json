  "paths": {
    "/users": {
      "post": {
        "summary": "Criação de um usuário",
        "description": "Rota pra a criação de usuário que poderá ter privilégio de administrador",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "aplication/json": {
              "schema": {
                "$ref": "#/components/schemas/Users"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "CREATED",
            "content": {
              "aplication/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "username": { "type": "string" },
                    "isAdm": { "type": "boolean" }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Conflict",
            "content": {
              "aplication/json": {
                "schema": {
                  "type": "object",
                  "example": {
                    "message": "username already exists"
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Listagem de usuários",
        "description": "Rota para listagem de todos os usuários",
        "tags": ["Users"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "aplication/json": {
                "schema": {
                  "type": "object"
                },
                "examples": {
                  "user": {
                    "value": [
                      {
                        "username": "admin",
                        "password": "1234",
                        "isAdm": true
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{id}": {
      "delete": {
        "summary": "Deleção usuário",
        "description": "Rota para deletar usuário",
        "tags": ["Users"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "UUID do usuário",
            "required": true
          }
        ],
        "responses": {
          "204": {
            "description": "NO CONTENT"
          },
          "400": {
            "description": "BAD REQUEST",
            "content": {
              "aplication/json": {
                "schema": {
                  "type": "object",
                  "example": {
                    "message": "Missing authorization token"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "aplication/json": {
                "schema": {
                  "type": "object",
                  "example": {
                    "message": "Unauthorized"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "aplication/json": {
                "schema": {
                  "type": "object",
                  "example": {
                    "message": "User not found"
                  }
                }
              }
            }
          }
        }
      }
    },
