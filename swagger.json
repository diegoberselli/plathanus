        "responses": {
          "201": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "example": {
                    "info": {
                      "skip": 2,
                      "take": 2,
                      "next": "https://plathanus-challenge.herokuapp.com/rockets/pagination?take=2&skip=2",
                      "prev": null
                    }
                  }
